footer.govuk-footer role='contentinfo'
  .govuk-width-container

    .govuk-footer__navigation
      .govuk-footer__section.govuk-grid-column-two-thirds
        - if breadcrumbs_trail && breadcrumbs_trail[1]
          h2.govuk-footer__heading.govuk-heading-m
            ==breadcrumbs_trail[1][:title]
          ul.govuk-footer__list.govuk-footer__list--columns-2
            - children_of(breadcrumbs_trail[1]).each do |child|
              li.govuk-footer__list-item
                == link_to(child[:title], child.path, class: "govuk-footer__link")

      .govuk-footer__section.govuk-grid-column-one-third
        h2.govuk-footer__heading.govuk-heading-m All course materials
        ul.govuk-footer__list
          li.govuk-footer__list-item
            == link_to("Ambition Institute", "/ambition-institute/", class: "govuk-footer__link")
          li.govuk-footer__list-item
            == link_to("Education Development Trust", "/education-development-trust/", class: "govuk-footer__link")
          li.govuk-footer__list-item
            == link_to("Teach First", "/teach-first/", class: "govuk-footer__link")
          li.govuk-footer__list-item
            == link_to("UCL", "/ucl/", class: "govuk-footer__link")

